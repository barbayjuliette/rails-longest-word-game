<h1 class ="mx-3">New game</h1>

<ul class="list-inline">
<% @grid.each do |letter| %>
  <li li class="list-inline-item m-3 p-3 bg-primary inline-block"><%= letter %></li>
<% end %>
</ul>

<form action="/score" method = "post" data-turbo="false" class ="mx-3">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="ask_name">What is the longest word you can find?</label>
  <br>
  <%= hidden_field_tag :grid, @grid %>
  <input type="text" name="word" id = "ask_name" class = "mt-3">
  <input type="submit" value="Play">
</form>
